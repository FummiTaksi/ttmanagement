<p id="notice"><%= notice %></p>

<h1>Listing Matches</h1>

<table>
  <thead>
    <tr>
      <th>HomePlayer<th>
      <th>AwayPlayer</th>
      <th>HomeSets</th>
      <th>AwaySets</th>
      <th>Winner</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.player1 %></td>
        <td><%= match.player2 %></td>
        <td><%=match.homeSets%></td>
        <td><%=match.awaySets%></td>
        <td><%=match.winner %></td>
        <td><%= link_to 'Details', match %></td>

        <% if current_player and current_player.admin %>
            <td><%= link_to 'Edit', edit_match_path(match) %></td>
            <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>

<table class="table table-hover">
  <thead>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Birthday</th>
    <th>Age</th>
    <th>Played matches</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% players.each do |player| %>
      <tr>
        <td><%= link_to player.firstname, player %></td>
        <td><%= link_to player.lastname, player %></td>
        <td><%= player.birthday %></td>
        <td><%= player.count_age %></td>
        <td><%= player.matches.size %> </td>
        <% if current_player and current_player == player %>
            <td><%= link_to 'Edit', edit_player_path(player), class:'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>


        <% end %>


      </tr>
  <% end %>
  </tbody>
</table>
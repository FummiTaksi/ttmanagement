<%# add navigation links to this file %>
<li><%= link_to "Clubs",clubs_path %></li>
<li><%= link_to "Players",players_path %></li>
<li><%= link_to "Matches", matches_path %></li>
<% if current_player %>
    <li><%= link_to current_player.username, current_player %></li>
    <li><%= link_to "Sign out", signout_path %></li>
<% else %>
    <li><%= link_to "Sign in", signin_path %></li>
    <li><%= link_to "Sign up", signup_path %></li>
<% end %>

<% if current_player and current_player.clubowner and !current_player.club.nil? %>
    <li><%= link_to "Add players to your club", new_membership_path %></li>
<% end %>

<% if current_player and current_player.admin %>
    <li><%= link_to "Add new match", new_match_path %></li>
<% end %>
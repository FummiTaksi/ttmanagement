<!DOCTYPE html>
<html>
<head>
  <title>Ttmanagement</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navibar">
  <%= link_to "Clubs",clubs_path %>
  <%= link_to "Players",players_path %>
  <% if current_player %>
      signed in as <%= link_to current_player.username, current_player %>
      <%= link_to "Sign out", signout_path %>
  <% else %>
      <%= link_to "Sign in", signin_path %>
      <%= link_to "Sign up", signup_path %>
      <% end %>

  <% if current_player and current_player.clubowner %>
    <%= link_to "Add players to your club", new_membership_path %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
